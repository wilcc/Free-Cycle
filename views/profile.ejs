<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ./partials/head %>
    <link rel="stylesheet" href="/stylesheets/createpost.css" />
    <link rel="stylesheet" href="/stylesheets/style.css" />

    <title>Profile-Online Shopper</title>
  </head>
  <body>
    <% include ./partials/newnavbar %>
    <section class="get-in-touch">
      <h1 class="title"><%= user.profile.name %>'s Profile </h1>
    
    <div class="container profile">

      
      <div class="row">
        <% console.log(user) %> 
        <div class="col-sm-6 offset-sm-3 col-md-6 offset-md-3">

          <br />
          <img
            src="/images/profile-imageholder.png"
            alt="..."
            class="img-circle img-responsive img-center profile-imageholder"
          />
          <br /><br />
          <p>Name: <%= user.profile.name %></p>
          <p>Email: <%= user.email%></p>
          <p>Address: <%= user.address %></p>
          <a href="/api/users/update-profile" class="btn btn-primary btn-lg">Edit</a>

          <br />
        </div>
      </div>
    </div>

    <% include ./partials/scripts %>
  </body>
</html>
